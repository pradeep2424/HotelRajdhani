<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

<!--        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
<!--            android:id="@+id/iv_foodImage"-->
<!--            android:layout_width="90dp"-->
<!--            android:layout_height="90dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@mipmap/temp_order"-->
<!--            app:riv_corner_radius="6dp" />-->

        <ImageView
            android:id="@+id/iv_foodType"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="top"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <com.miracle.rajdhani.custom.MyTextView
                android:id="@+id/tv_foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Cocobolo Poolside Bar + Grill"
                android:textColor="@color/main_dark_text"
                android:textSize="15sp" />

            <com.miracle.rajdhani.custom.MyTextView
                android:id="@+id/tv_foodCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_foodName"
                android:layout_marginTop="6dp"
                android:text="Chinese Main Course"
                android:textColor="@color/light_gray_hint"
                android:textSize="14sp" />

            <com.miracle.rajdhani.custom.MyTextView
                android:id="@+id/tv_foodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_foodCategory"
                android:layout_marginTop="6dp"
                android:text="₹ 50.00"
                android:textColor="@color/main_text"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_foodCategory"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:id="@+id/ll_addButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="7dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="7dp"
                    android:visibility="visible">

                    <com.miracle.rajdhani.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/add"
                        android:textAllCaps="true"
                        android:textColor="@color/light_green_700"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_add"
                        android:tint="@color/light_green_700" />

                </LinearLayout>

                <com.travijuu.numberpicker.library.NumberPicker
                    android:id="@+id/numberPicker_quantity"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="30dp"
                    app:custom_layout="@layout/custom_layout_number_picker"
                    app:focusable="false"
                    app:unit="1"
                    app:value="1"
                    android:visibility="gone"/>

<!--                <com.travijuu.numberpicker.library.NumberPicker-->
<!--                    android:id="@+id/number_picker_default"-->
<!--                    android:layout_width="130dp"-->
<!--                    android:layout_height="40dp" />-->

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="#f5f5f5" />

</LinearLayout>


